@using Virtual_Wallet.Models.ViewModels.Admin
@model DashboardViewModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
<link rel="stylesheet" href="~/css/PopUpStyle.css" asp-append-version="true" />


<div class="container">
    <h1 class="text-center">Admin Dashboard</h1>

    <form asp-action="Dashboard" asp-controller="Admins" method="get" class="mb-3">
        <div class="d-flex align-items-center">
            <input type="text" class="form-control" name="search" placeholder="Search by username, email, or phone..." />
            <button type="submit" class="btn btn-primary ml-2">Search</button>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <div class="btn-group">
                            @if (user.IsBlocked)
                            {
                                <form asp-action="UnblockUser" asp-controller="Admins" method="post" style="display: inline-block;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-success">Unblock</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="BlockUser" asp-controller="Admins" method="post" style="display: inline-block;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-warning">Block</button>
                                </form>
                            }
                            @if (user.IsAdmin)
                            {
                                <form asp-action="DemoteUser" asp-controller="Admins" method="post" style="display: inline-block;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-secondary">Demote</button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="PromoteUser" asp-controller="Admins" method="post" style="display: inline-block;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-info">Promote</button>
                                </form>
                            }
                            @if (!user.IsDeleted)
                            {
                                <form id="deleteForm_@user.Id" asp-action="DeleteUser" asp-controller="Admins" method="post" style="display: inline-block;">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="button" onclick="showCustomPopup('@user.Id')" class="btn btn-danger">Delete</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center">
        <form asp-action="Dashboard" asp-controller="Admins" method="get" class="d-inline">
            <input type="hidden" name="pageNumber" value="@(Model.PageNumber - 1)" />
            <input type="hidden" name="search" value="@Model.Search" />
            <button type="submit" class="btn btn-secondary" @(Model.ShowPrevious ? "" : "disabled")>
                <i class="fas fa-arrow-left"></i>
            </button>
        </form>

        <span class="mx-3">Page @Model.PageNumber of @Model.TotalPages</span>

        <form asp-action="Dashboard" asp-controller="Admins" method="get" class="d-inline">
            <input type="hidden" name="pageNumber" value="@(Model.PageNumber + 1)" />
            <input type="hidden" name="search" value="@Model.Search" />
            <button type="submit" class="btn btn-secondary" @(Model.ShowNext ? "" : "disabled")>
                <i class="fas fa-arrow-right"></i>
            </button>
        </form>
    </div>
</div>
<!-- POP UP -->
<div id="customPopup" class="custom-popup">
    <div class="popup-content">
        <i class="fas fa-exclamation-triangle fa-5x" aria-hidden="true"></i>
        <hr />
        <p>Are you sure you want to delete this user?</p>
        <hr />
        <p class="w3-opacity">This action cannot be undone.</p>
        <button id="confirmButton" class="btn btn-success w3-round">Confirm</button>
        <button id="cancelButton" class="btn btn-danger w3-round">Cancel</button>
    </div>
</div>

<script>
    const customPopup = document.getElementById('customPopup');
    const confirmButton = document.getElementById('confirmButton');
    const cancelButton = document.getElementById('cancelButton');
    let currentFormId = ''; // This will store the ID of the form to be submitted.

    function showCustomPopup(userId) {
        currentFormId = 'deleteForm_' + userId; // Assign the right form ID
        customPopup.style.display = 'block';
    }

    function hideCustomPopup() {
        customPopup.style.display = 'none';
    }

    confirmButton.addEventListener('click', function () {
        if (currentFormId) {
            document.getElementById(currentFormId).submit();
        }
    });

    cancelButton.addEventListener('click', hideCustomPopup);
</script>