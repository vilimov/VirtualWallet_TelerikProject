@model Virtual_Wallet.Models.ViewModels.LoginAndRegister.LoginViewModel

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="form-group d-flex flex-column align-items-center">
    <label asp-for="Username" class="w3-text-grey">Username</label>
    <input asp-for="Username" class="form-control custom-input" />
    <span asp-validation-for="Username" class="text-danger"></span>
</div>

<div class="form-group d-flex flex-column align-items-center">
    <label asp-for="Password" class="w3-text-grey">Password</label>
    <input asp-for="Password" class="form-control custom-input" type="password" />
    <span asp-validation-for="Password" class="text-danger"></span>
</div>
