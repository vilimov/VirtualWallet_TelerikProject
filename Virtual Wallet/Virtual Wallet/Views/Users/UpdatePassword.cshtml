@model Virtual_Wallet.Models.ViewModels.UpdatePasswordViewModel

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lilita+One&display=swap" rel="stylesheet">

<h2 class="w3-center" style="font-family: 'Lilita One' , cursive;">Change your Password</h2>

<hr />

<form method="post">
    <div class="form-group d-flex flex-column align-items-center">
        <label for="CurrentPassword">Current Password</label>
        <input id="CurrentPassword" class="w3-text-grey mb-2" type="password" asp-for="CurrentPassword" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-column align-items-center">
        <label for="NewPassword">New Password</label>
        <input id="NewPassword" class="w3-text-grey mb-2" type="password" asp-for="NewPassword" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-column align-items-center">
        <label for="ConfirmPassword">Confirm Password</label>
        <input id="ConfirmPassword" class="w3-text-grey mb-2" type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-column align-items-center mt-4">
        <button type="submit" class="button-43" role="button">Update</button>
    </div>
</form>
<div class="form-group d-flex flex-column align-items-center mt-4">
    <a href="@Url.Action("Profile", "Users")" class="button-36" role="button">Back to Profile</a>
</div>
