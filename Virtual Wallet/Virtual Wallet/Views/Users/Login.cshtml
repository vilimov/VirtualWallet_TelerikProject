@model Virtual_Wallet.Models.ViewModels.LoginViewModel

<div class="w3-container w3-white w3-padding-32">
    <h1 class="w3-center">Login</h1>
    <hr style="width:100%; text-align:center; margin: 0 auto 50px;">
    <form asp-action="Login" asp-controller="Users" method="post">

        <div class="d-flex justify-content-center">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

    <div class="form-group d-flex flex-column align-items-center">
        <label asp-for="Username" class="w3-text-grey">Username</label>
        <input asp-for="Username" class="form-control custom-input" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group d-flex flex-column align-items-center">
        <label asp-for="Password" class="w3-text-grey">Password</label>
        <input asp-for="Password" class="form-control custom-input" type="password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
        <div class="form-group d-flex flex-column align-items-center mt-4">
            <input type="submit" value="Login" class="btn btn-primary w-50 mb-4" />
            <span>You don't have account yet?</span>
        <a asp-controller="Users" asp-action="Register" class="btn btn-secondary w-50">Register</a>
        </div>
    </form> 
</div>
